<div class="bg-white rounded-lg shadow p-10"> 
    <h2 class="text-2xl font-bold text-left text-gray-800 mb-6">Home</h2>

    <h3 class="text-xl font-semibold mt-6 mb-2">Lembretes</h3>

    {{#if dataValues.length}}
        <ul class="space-y-4">
            {{#each dataValues}}
                <li class="p-4 border rounded-lg shadow-sm flex flex-row items-center justify-between">
                    <h4 class="text-lg font-bold text-gray-700">{{title}}</h4>
                    {{#if description}}
                        <p class="text-gray-600">{{description}}</p>
                    {{/if}}
                    {{#if date}}
                        <p class="text-sm text-gray-500">Data: {{date}}</p>
                    {{/if}}
                    {{#if this.User.name}}
                        <p class="text-sm text-gray-500">Criado por: {{this.User.name}}</p>
                    {{/if}}
                    
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p class="text-gray-500">Nenhum lembrete encotrado.</p>
    {{/if}}
</div>
